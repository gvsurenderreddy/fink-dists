Suggests: monodevelop

CustomMirror: RangerMirror
NoSourceDirectory: true
Source: http://dist.codehaus.org/%n/distributions/%n-%v-src.zip
Source-MD5: 794db3987f3773d116eff01ec08b8915

SetCPPFLAGS: -I%p/include
SetLIBS: -L%p/lib
SetMAKEFLAGS: -j1
NoSetCPPFLAGS: true
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

	export PKG_CONFIG_PATH="%p/lib/freetype219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH"
	export MONO_PATH=`pwd`/build:"$MONO_PATH"
	nant -D:install.prefix=%p -D:skip.vs2005=True
<<

InstallScript: <<
#!/bin/sh -ex

	export PKG_CONFIG_PATH="%p/lib/freetype219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH"
	export MONO_PATH=`pwd`/build:"$MONO_PATH"
	nant -D:install.prefix=%p -D:install.destdir=%d install

	perl -pi -e 's,^libdir=.*$,libdir=%p/lib/mono,' %i/lib/pkgconfig/boo.pc
	install -d -m 755 %i/share/doc/%N
	mv examples %i/share/doc/%N/
<<
DocFiles: *.txt docs/*

Homepage: http://go-mono.com/
DescDetail: <<
Boo is a new object oriented statically typed programming language for
the Common Language Infrastructure with a python inspired syntax and
a special focus on language and compiler extensibility.
<<

