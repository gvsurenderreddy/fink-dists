PatchScript: <<
#!/bin/sh -ev
	perl -pi -e 's/hardcode_direct=yes/hardcode_direct=no/g' configure
<<
Patch: %n.patch
NoSetCPPFLAGS: true
SetCPPFLAGS: -D__DARWIN_UNIX03=1 -I%p/lib/pango-ft219/include/pango-1.0 -I%p/lib/pango-ft219/include -I%p/lib/freetype219/include -I%p/lib/freetype219/include/freetype2 -I%p/lib/fontconfig2/include -fno-common
SetCFLAGS: -Os -undefined dynamic_lookup
NoSetLDFLAGS: true
SetLDFLAGS: -L%p/lib/pango-ft219/lib -L%p/lib/freetype219/lib -L%p/lib/fontconfig2/lib -bind_at_load
SetLIBS: -L%p/lib
# --enable-exchange dependency loop?
ConfigureParams: --disable-scrollkeeper --disable-dependency-tracking --with-krb5 --with-krb4 --with-openldap=%p --disable-exchange --enable-file-chooser --enable-default-binary --disable-mono --enable-cairo-calendar --enable-pilot-conduits --disable-schemas-install --enable-ipv6 --with-db3-includes=%p/include/db31 --with-db3-libs=%p/lib/db31 --disable-gtk-doc --mandir=%p/share/man --with-nspr-includes=%p/include/firefox1.5/nspr --with-nss-includes=%p/include/firefox1.5/nss --with-nspr-libs=%p/lib/firefox1.5 --with-nss-libs=%p/lib/firefox1.5 PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:%p/lib/pilot-link9/lib/pkgconfig:$PKG_CONFIG_PATH" F77=no FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
CompileScript: <<
	./configure %c
	make MSGFMT=%p/bin/msgfmt GMSGFMT=%p/bin/msgfmt
<<
InstallScript: <<
	make -j1 install DESTDIR="%d"
	perl -pi -e "s, \-R *[^ ']*,,g; s, \-L(%p|/usr)/lib([^/]),\2,g" `find %i/lib -name '*.la'`
	rm -rf %i/var/lib/scrollkeeper
<<
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
	fi
<<
PostRmScript: <<  
	if [ remove != "$1" ]; then
		scrollkeeper-update
	fi
<<
