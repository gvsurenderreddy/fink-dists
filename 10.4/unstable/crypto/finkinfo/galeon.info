GCC: 4.0

# Allow linking to GCC 4 stuff
SetLDFLAGS: -lSystemStubs
Patch: %n.patch
# Don't do scrollkeeper-update on install
PatchScript: find . -name Makefile.in | xargs perl -i -pe 's/^\s+-scrollkeeper-update/#$&/g'

ConfigureParams: --mandir=%i/share/man --with-mozilla-libs=%p/lib/mozilla --with-mozilla-includes=%p/include/mozilla --with-mozilla-snapshot=1.7 --disable-schemas-install --enable-nautilus-view --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config

PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update
    %p/bin/galeon-config-tool --fix-gconf-permissions
    %p/bin/galeon-config-tool --pkg-install-schemas
  fi
<<
PostRmScript: <<
  if [ upgrade != "$1" ]; then
    scrollkeeper-update
  fi
<<

