InstallScript: <<
  make -j1 install DESTDIR=%d
  if [ "%m" != "powerpc" ] ; then rm -rf %d%p/lib/mozilla; fi
  install -d %d%p/bin
  mv examples/.libs/sdl-viewer examples/.libs/openvrml-sdl-viewer
  install -c examples/.libs/openvrml-sdl-viewer %d%p/bin
<<
