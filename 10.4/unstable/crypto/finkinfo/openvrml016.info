SetCFLAGS: -Os
SetCXXFLAGS: -Os
ConfigureParams: --without-apple-opengl-framework --mandir=%p/share/man --infodir=%p/share/info --libexecdir=%p/lib (%m != powerpc) --disable-script-node-javascript (%m != powerpc) --disable-mozilla-plugin --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/f
