BuildDepends: (%type_raw[gecko] = -firefox1.5) firefox1.5-dev (>= 1.5.0.9-1002), (%type_raw[gecko]  = -seamonkey) seamonkey-dev, atk1 (>= 1.12.3-1), expat1, libpng3, cairo, fontconfig2-dev (>= 2.3.2-13), freetype219, glib2-dev (>= 2.12.0-1), glitz, gtk+2-dev (>= 2.10.0-1), gtk-sharp2 (>= 2.4.2-1022), libgettext3-dev, libxml2, mono-dev (>= 1.2-1021), monodoc (>= 1.2-1021), pango1-xft2-ft219-dev (>= 1.14.9-1001), pkgconfig (>= 0.21-1), x11-dev, xft2-dev
