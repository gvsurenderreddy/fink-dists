	F77=no ./configure %c
	make
<<
InstallScript: <<
	GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 make install DESTDIR=%d
<<
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/ggv.schemas >/dev/null
	fi
<<
PostRmScript: <<
	if [ update != "$1" ]; then
		scrollkeeper-update
	fi
<<
