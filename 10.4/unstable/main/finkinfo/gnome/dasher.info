ConfigureParams: --disable-schemas-install --disable-scrollkeeper --libexecdir=%p/lib/%n --mandir=%p/share/man --disable-dependency-tracking --with-cairo --with-a11y PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
InstallScript: make -j1 install DESTDIR="%d"
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
	fi
 [ -x %p/bin/update-desktop-database ] && update-desktop-database -q || :
<<
PostRmScript: <<
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
 [ -x %p/bin/update-desktop-database ] && update-desktop-database -q || :
<<
