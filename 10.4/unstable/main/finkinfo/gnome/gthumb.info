SetCFLAGS: -Os
ConfigureParams: --disable-scrollkeeper --libexecdir=%p/lib/%n --mandir=%p/share/man --disable-dependency-tracking --disable-schemas-install PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
InstallScript: <<
	make -j1 install DESTDIR=%d
	rm -rf %i/var/lib/scrollkeeper
<<
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gthumb.schemas >/dev/null
	fi
<<
PostRmScript: <<
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
<<
ConfFiles: %p/etc/gconf/schemas/gthumb.schemas
