PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update -q
    export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gconf-editor.schemas >/dev/null
  fi
<<
PostRmScript: <<
  if [ update != "$1" ]; then
    scrollkeeper-update -q
  fi
<<
