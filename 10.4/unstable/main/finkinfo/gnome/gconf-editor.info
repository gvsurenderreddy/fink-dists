PatchScript: perl -pi -e "s/-scrollkeeper-update/#-scrollkeeper-update/g" `find . -name Makefile.in`
SetCPPFLAGS: -no-cpp-precomp
ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH"
