Package: goocanvas
Version: 0.9
Revision: 1

Source: mirror:sourceforge:%n/%n-%v.tar.gz
Source-MD5: 600f28e51736b9d768108c32172b0726

BuildDepends: <<
	atk1 (>= 1.20.0-1),
	cairo (>= 1.6-1),
	expat1,
	fontconfig2-dev (>= 2.4.1-1),
	freetype219 (>= 2.3.5-1),
	gettext-bin,
	gettext-tools,
	glib2-dev (>= 2.14.0-1),
	glitz,
	gtk+2-dev (>= 2.12.0-1),
	libgettext3-dev,
	libiconv-dev,
	libpng3 (>= 1.2.5-4),
	pango1-xft2-ft219-dev (>= 1.18.4-4),
	pixman (>= 0.10.0-1),
	pkgconfig (>= 0.21-1),
	x11-dev,
	xft2-dev
<<
Depends: %N-shlibs (= %v-%r)
BuildDependsOnly: true

ConfigureParams: --disable-dependency-tracking
CompileScript: <<
	PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" ./configure %c
	make
<<

InstallScript: <<
	make install DESTDIR=%d
	mkdir -p %i/share/doc/%n
	cp -r demo %i/share/doc/%n
<<
DocFiles: AUTHORS COPYING ChangeLog NEWS README TODO

SplitOff: <<
	Package: %N-shlibs
	Depends: <<
		atk1-shlibs (>= 1.20.0-1),
		cairo-shlibs (>= 1.6-1),
		expat1-shlibs,
		fontconfig2-shlibs (>= 2.4.1-1),
		freetype219-shlibs (>= 2.3.5-1),
		glib2-shlibs (>= 2.14.0-1),
		glitz-shlibs,
		gtk+2-shlibs (>= 2.12.0-1),
		libgettext3-shlibs,
		libiconv,
		libpng3-shlibs (>= 1.2.5-4),
		pango1-xft2-ft219-shlibs (>= 1.18.4-4),
		x11-shlibs
	<<
	Files: lib/libgoocanvas.3.* share/locale
	Shlibs: %p/lib/libgoocanvas.3.dylib 4.0.0 %n (>= 0.9-1)
	DocFiles: AUTHORS COPYING ChangeLog NEWS README TODO
<<

