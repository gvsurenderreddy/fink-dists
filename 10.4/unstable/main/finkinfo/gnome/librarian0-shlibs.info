Depends: xdg-base
GCC: 4.0

PatchScript: <<
	perl -pi -e 's,#include <sys/stat.h>,#include <sys/types.h>\n$&,' util//rarian-sk-get-cl.cpp
<<

ConfigureParams: --disable-dependency-tracking --disable-skdb-update

InstallScript: <<
	make install DESTDIR=%d
<<
DocFiles: AUTHORS COPYING* ChangeLog NEWS README TODO

# Does not use libversioning because API is not stable yet!
Shlibs: %p/lib/librarian.0.dylib 1.0.0 %n (>= 0.5.6-1)

SplitOff: <<
	Package: librarian0-dev
	Depends: %N (= %v-%r), rarian (= %v-%r)
	BuildDependsOnly: true
	Files: <<
		bin/rarian-sk-config
		include
		lib/librarian.{a,dylib,la}
		lib/pkgconfig
		share/help
		share/librarian/manual
	<<
	DocFiles: AUTHORS COPYING* ChangeLog NEWS README TODO
<<
SplitOff2: <<
	Package: rarian-compat
	Depends: rarian (= %v-%r)
	Replaces: scrollkeeper
	Files: bin/scrollkeeper*
	DocFiles: AUTHORS COPYING* ChangeLog NEWS README TODO
<<
SplitOff3: <<
	Package: rarian
	Depends: %N (= %v-%r), libxslt-bin
	Files: <<
		bin
		share/librarian
	<<
	DocFiles: AUTHORS COPYING* ChangeLog NEWS README TODO
<<

