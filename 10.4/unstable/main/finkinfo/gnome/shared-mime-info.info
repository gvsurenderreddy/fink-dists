	gettext-bin,
	gettext-tools,
	glib2-dev (>= 2.12.0-1),
	intltool (>= 0.35.5-1),
	libgettext3-dev,
	libiconv-dev,
	libxml2 (>= 2.6.19-2),
	libxml2-bin (>= 2.6.19-2),
	pkgconfig
<<
