Package: libgda
Version: 1.2.4
Revision: 1
BuildDepends: <<
	gettext-bin,
	gettext-tools,
	glib2-dev (>= 2.12.0-1),
	intltool (>= 0.36.0-1),
	libgettext3-dev,
	libiconv-dev,
	libxml2 (>= 2.5.2-1),
	libxslt (>= 1.0.19-1),
	pkgconfig (>= 0.21-1),
	popt,
	readline5,
	sqlite3-dev
<<
Depends: <<
	%N3-shlibs (= %v-%r),
	popt-shlibs,
	scrollkeeper
<<
Source: mirror:gnome:sources/%n/1.2/%n-%v.tar.bz2
Source-MD5: 512a8ed842ce98eb432e69bd6867f437
PatchScript: perl -pi -e "s/need_relink=yes/need_relink=no/" ltmain.sh
ConfigureParams: --mandir='%p/share/man' --disable-gtk-doc PERL=/usr/bin/perl --without-bdb --without-odbc --without-mysql --without-mSQL --without-postgres --without-tds --without-ibmdb2 --without-sybase --without-oracle --without-firebird --without-xbase --without-mdb --without-ldap
InstallScript: make -j1 install DESTDIR=%d
SplitOff: <<
	Package: %N3-shlibs
	Depends: <<
		glib2-shlibs (>= 2.12.0-1),
		libgettext3-shlibs,
		libxslt-shlibs (>= 1.0.19-1),
		libxml2-shlibs (>= 2.4.25-3),
		libiconv (>= 1.7-7),
		readline5-shlibs,
		sqlite3-shlibs
	<<
	Replaces: libgda, libgda-shlibs
	Files: <<
		lib/libgda-2.*.dylib
		lib/libgda-report-2.*.dylib
		lib/libgdasql.*.dylib
		lib/libgda
		share/locale
	<<
	Shlibs: <<
		%p/lib/libgda-2.3.dylib        4.0.0 %n (>= 1.2.4-1)
		%p/lib/libgda-report-2.3.dylib 4.0.0 %n (>= 1.2.4-1)
		%p/lib/libgdasql.3.dylib       4.0.0 %n (>= 1.2.4-1)
	<<
	DocFiles: AUTHORS COPYING COPYING.LIB ChangeLog NEWS README
	Description: Shared libraries for libgda package
<<
SplitOff2: <<
	Package: %N3-dev
	Depends: %N (= %v-%r), scrollkeeper
	DescPackaging: <<
		Uses pkgconfig.
		Any package which BuildDepends on this one must also BuildDepend on:
			glib2-dev (>= 2.12.0-1), libxml2 (>= 2.5.2-1), libxslt (>= 1.0.19-1)
	<<
	Conflicts: libgda-dev
	Replaces: libgda-dev
	BuildDependsOnly: True
	Files: <<
		include
		lib/libgda-2.*
		lib/libgda-report-2.*
		lib/libgdasql.*
		lib/pkgconfig
		share/gtk-doc
		share/omf
	<<
	DocFiles: AUTHORS COPYING COPYING.LIB ChangeLog NEWS README
	Description: Developer files for libgda package
	PostInstScript: <<
		if [ configure = "$1" ]; then
			scrollkeeper-update
		fi
	<<
	PostRmScript: <<
		if [ remove = "$1" ]; then
			scrollkeeper-update
		fi
	<<
<<
