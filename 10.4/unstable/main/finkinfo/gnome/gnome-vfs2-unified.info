CompileScript: <<
#!/bin/sh -ev

	SSH_PROGRAM=/usr/bin/ssh ./configure %c --libdir=%p/lib/gnome-vfs2.16
	make 
	perl -pi -e 's/-lssl//g; s/-lcrypto//g' libgnomevfs/.libs/libgnomevfs-2.lai
<<
InstallScript: <<
#!/bin/sh -ev

	make install DESTDIR="%d"

	pushd %i/lib
	rm -rf libgnomevfs-2.dylib libgnomevfs-2.la libgnomevfs-2.a pkgconfig
	ln -s gnome-vfs2.16/libgnomevfs-2.dylib .
	ln -s gnome-vfs2.16/libgnomevfs-2.la    .
	ln -s gnome-vfs2.16/libgnomevfs-2.a     .
	mv gnome-vfs2.16/pkgconfig              .

	install -d %i/share/doc/installed-packages
	for type in "" "-shlibs" "-dev"; do
		for ssl in "" "-ssl"; do
			touch %i/share/doc/installed-packages/gnome-vfs2${ssl}${type}
		done
	done
<<
PostInstScript: <<
	if [ configure = "$1" ]; then
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		for i in desktop_default_applications desktop_gnome_url_handlers \
			system_dns_sd system_http_proxy system_smb; do
				gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/$i.schemas >/dev/null
		done
	fi
<<
