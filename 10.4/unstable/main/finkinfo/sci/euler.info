InstallScript: <<
 mkdir -p %i/share
 mkdir -p %i/bin
 make install DESTDIR=%d 
 mv %i/bin/euler %i/bin/eulerx
 echo "#!/bin/sh" > %i/bin/euler
 echo "(cd %p/share/euler/progs; %p/bin/eulerx $*)" >> %i/bin/euler
 chmod 755 %i/bin/euler
<<
