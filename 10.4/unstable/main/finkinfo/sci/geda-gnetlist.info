  x11, libgettext3-shlibs, libiconv,
  glib2-shlibs (>= 2.12.0-1),
  gtk+2 (>= 2.10.0-1), atk1-shlibs (>= 1.12.3-1), pango1-xft2-ft219 (>= 1.14.9-1)
<<
BuildDepends: <<
  glitz, expat1, libpng3, cairo (>= 1.2-1), fontconfig2-dev (>= 2.3.2-13), freetype219, xft2-dev,
  guile16-dev (>= 1.6.7-1010), libgeda (>= %v-0), geda-symbols,
  x11-dev, pkgconfig (>= 0.21-1), libiconv-dev, libgettext3-dev,
  glib2-dev (>= 2.12.0-1), gtk+2-dev (>= 2.10.0-1), atk1 (>= 1.12.3-1), pango1-xft2-ft219-dev (>= 1.14.9-1)
