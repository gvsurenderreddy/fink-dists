  breqn, cairo (>= 1.2-1), cairomm1 (>= 1.2-1), expat1, fontconfig2-dev (>= 2.3.2-13), freetype219 (>= 2.3.1-1), gettext-bin, gettext-tools, glitz, libjpeg, libpng3, libtiff, pkgconfig (>= 0.21-1), xft2-dev,
  modglue (>= 1.8-1), gtk+2-dev (>= 2.11.6-1), x11-dev, pcre, gmp, libsigc++2 (>= 2.0.17-1001), glib2-dev (>= 2.12.0-1), 
