PatchScript: <<
#!/bin/sh
set -ex
patch -p1 < %a/%n.patch
for dir in . mkf kiklib; do (
    cd $dir
    autoreconf -fvi
    %p/bin/libtoolize --copy --force
    rm -f aclocal.m4
    ) || exit $?
done
<<
# Don't remove --config-cache to workaround libtool.m4's(?) bug
ConfigureParams: --enable-shared --with-imagelib=gdk-pixbuf --enable-fribidi --enable-ind --prefix=%p --libexecdir=%p/lib/mlterm --infodir=%p/share/info --mandir=%p/share/man --with-libiconv-prefix=%p --with-libintl-prefix=%p --enable-anti-alias --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
InstallScript: <<
  make install DESTDIR=%d
  install -d -m 755 %i/share/doc
  cp -R doc %i/share/doc/%n
  install -d -m 755 %i/share/doc/%n/etc
  install -m 644 etc/main.ja etc/font.ja %i/share/doc/%n/etc
<<
