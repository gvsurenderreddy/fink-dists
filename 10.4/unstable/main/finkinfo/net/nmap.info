	lua51-dev,
	pcre,
	system-openssl-dev,
	(%type_raw[-nox] = .) atk1 (>= 1.20.0-1),
	(%type_raw[-nox] = .) autoconf,
	(%type_raw[-nox] = .) automake1.9,
	(%type_raw[-nox] = .) cairo (>= 1.2-1),
	(%type_raw[-nox] = .) expat1,
	(%type_raw[-nox] = .) fontconfig2-dev (>= 2.3.2-13),
	(%type_raw[-nox] = .) freetype219 (>= 2.3.1-1),
	(%type_raw[-nox] = .) gettext-bin,
	(%type_raw[-nox] = .) gettext-tools,
	(%type_raw[-nox] = .) glib2-dev (>= 2.14.0-1),
	(%type_raw[-nox] = .) glitz,
	(%type_raw[-nox] = .) gtk+2-dev (>= 2.12.0-1),
	(%type_raw[-nox] = .) libgettext3-dev,
	(%type_raw[-nox] = .) libiconv-dev,
	(%type_raw[-nox] = .) libpng3,
	(%type_raw[-nox] = .) pango1-xft2-ft219-dev (>= 1.18.2-1),
